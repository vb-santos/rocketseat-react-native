{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@theme/*": ["src/theme/*"],  
      "@screens/*": ["src/screens/*"],
      "@utils/*": ["src/utils/*"],
      "@storage/*": ["src/storage/*"],
    }
  }
}
